<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_selector_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="@color/white"
    tools:context="com.aidor.secchargemobile.seccharge.AddressSelectorVoice">


    <LinearLayout

        android:background="@color/colorPrimaryT"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:gravity="center">
        <TextView

            android:paddingTop="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Information"
            android:layout_marginTop="4dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/addressesWithinMiles"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:columnCount="1"
            android:rowCount="3">

            <Button
                android:id="@+id/firstOption"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:textAllCaps="false"
                android:text="Address 1"
                android:textAlignment="center" />

            <Button
                android:id="@+id/secondOption"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:text="Address 2" />

            <Button
                android:id="@+id/thirdOption"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:text="Address 3" />


        </GridLayout>
    </LinearLayout>
    <ImageSwitcher
        android:id="@+id/addressSelectorImageSwitcher"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"/>

</LinearLayout>
