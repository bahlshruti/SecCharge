<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="#ff000000"
    tools:context="com.aidor.secchargemobile.seccharge.MyReservationsActivity">
    <include layout="@layout/app_bar_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvReservationHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation History"
            android:layout_gravity="center_horizontal"
            android:textSize = "23dp"
            android:textStyle="bold"
            android:textColor="#fff"

            />



        <ListView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:divider="@color/colorAccent"
            android:dividerHeight="1sp"
            android:id="@+id/listMyReservations">

        </ListView>





    </LinearLayout>



</LinearLayout>
