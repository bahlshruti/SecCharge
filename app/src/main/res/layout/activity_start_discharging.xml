<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ff000000"
    tools:context="com.aidor.secchargemobile.seccharge.StartDischargingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charging Status"

            android:textColor="@color/white"
            android:textSize="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvMeterValue"

            android:textColor="@color/white"
            android:textSize="22dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layout_weight="50"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EV"
            android:layout_marginTop="40dp"

            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:textSize="25dp"/>

    <ImageView
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBattery0"
        android:src="@drawable/battery"
        android:alpha="1"
        android:visibility="visible"
      />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBattery1"
        android:src="@drawable/battery"
        android:alpha="1"
        android:visibility="visible"
        />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBattery2"
        android:src="@drawable/battery"
        android:alpha="1"
        android:visibility="visible"
       />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBattery3"
        android:src="@drawable/battery"
        android:alpha="1"
        android:visibility="visible"
       />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBattery4"
        android:src="@drawable/battery"
        android:alpha="1"
        android:visibility="visible"
    />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBattery5"
        android:src="@drawable/battery"
        android:alpha="1"
        android:visibility="visible"
      />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:layout_marginTop="40dp"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:id="@+id/tvEvValue"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_weight="50"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grid"
                android:layout_marginTop="40dp"

                android:layout_marginRight="50dp"
                android:textColor="@color/white"
                android:textSize="25dp"/>

            <ImageView
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBatteryGrid0"
                android:src="@drawable/battery"
                android:alpha="1"
                android:visibility="visible"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBatteryGrid1"
                android:src="@drawable/battery"
                android:alpha="1"
                android:visibility="visible"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBatteryGrid2"
                android:src="@drawable/battery"
                android:alpha="1"
                android:visibility="visible"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBatteryGrid3"
                android:src="@drawable/battery"
                android:alpha="1"
                android:visibility="visible"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBatteryGrid4"
                android:src="@drawable/battery"
                android:alpha="1"
                android:visibility="visible"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBatteryGrid5"
                android:src="@drawable/battery"
                android:alpha="1"
                android:visibility="visible"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                android:layout_marginTop="40dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:id="@+id/tvGridValue"
                android:layout_marginRight="50dp"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:id="@+id/tvMessage"
        android:textColor="@color/white"
        android:textSize="22dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:textColor="@drawable/redbutton_text_selector"
        android:text="Stop Discharging"
        android:alpha="0.97"
        android:onClick="onStopClicked"
        android:visibility="visible"
        android:id="@+id/btnStop"
        android:background="@drawable/red_button_selector"/>

</LinearLayout>
