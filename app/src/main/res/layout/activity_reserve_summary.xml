<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="@color/colorPrimaryT"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >
        
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:background="@color/colorPrimaryT"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_summary"/>
    <TextView
        android:paddingTop="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Summary"
        android:layout_marginLeft="15dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        />
            </LinearLayout>
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESERVATION for EV: "
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ford Focus "
            android:id="@+id/summary_tv_carName"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="5sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="site id: "

            android:layout_marginLeft="10sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="334 "
            android:id="@+id/summary_tv_siteID"

            android:layout_marginLeft="5sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner: "

            android:layout_marginLeft="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Musee canadian de la nature "
            android:id="@+id/summary_tv_owner"

            android:layout_marginLeft="5sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="240 McLeod "
        android:id="@+id/summary_tv_address1"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ottawa, ON, Canada, K2P 2R1"
        android:id="@+id/summary_tv_address2"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15sp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Start: "
            android:textSize="20sp"
            android:textStyle="bold"

            android:layout_marginLeft="10sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:id="@+id/summary_tvStartTime"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="End: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="60sp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:id="@+id/summary_tvEndTime"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/00 "
                android:id="@+id/summary_tvDate"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="10sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Port Type: "

                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FastDC: CHAdeMO"
                android:id="@+id/summary_tvPort"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                />

        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charging Rates"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Price (per half hour): "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5"
                android:id="@+id/tvUnitPrice"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation Price: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5"
                android:id="@+id/summary_tvReservationPrice"
                android:textSize="20sp"

                android:layout_marginLeft="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HST:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.65"
                android:id="@+id/tvHst"
                android:textSize="20sp"

                android:layout_marginLeft="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total charges:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textColor="@color/colorAccent"
                android:id="@+id/tvDollarSign"
                android:textSize="20sp"

                android:layout_marginLeft="10sp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.65"
                android:textColor="@color/colorAccent"
                android:id="@+id/tvtotalCharges"
                android:textSize="20sp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:alpha="0.8"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button_selector"
                android:textColor="@drawable/greenbutton_text_selector"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Confirm"
                android:textAllCaps="false"
                android:onClick="onConfirmClicked"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_button_selector"
                android:textColor="@drawable/whitebutton_text_selector"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Modify Reservation"
                android:padding="10sp"
                android:textAllCaps="false"
                android:onClick="goBack"
                android:layout_marginBottom="35dp"/>




        </LinearLayout>
        </LinearLayout>
</ScrollView>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>
